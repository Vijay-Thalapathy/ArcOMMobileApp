<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="horizontal"
android:id="@+id/ll_view"
android:focusable="false"
android:focusableInTouchMode="false"
card_view:cardCornerRadius="8dp"
card_view:cardBackgroundColor="@color/colorWhite"
card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/p1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:id="@+id/do_orderID_tv"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="N/A"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="N/A"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:id="@+id/do_Amt_tv"
                    android:gravity="end"
                    android:textColor="@color/ColorGreen"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:id="@+id/do_Customer_tv"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="N/A"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="N/A"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:id="@+id/do_Date_tv"
                    android:gravity="end"
                    android:textColor="@color/colorGrayDark"
                    tools:ignore="RelativeOverlap" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tax_ll"
            android:visibility="visible"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:id="@+id/do_status_tv"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorGrayDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/do_chkSelected"
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:theme="@style/check_style" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
