<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl"
    android:background="@color/colorBg"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <!--    <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                app:navigationIcon="@drawable/ic_back"
                android:id="@+id/toolbar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:id="@+id/createInvoice_img"
                    android:backgroundTint="@color/colorWhite"
                    android:background="@drawable/plus_round"
                    android:layout_marginEnd="25dp" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="Products"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:textColor="@color/colorWhite" />
            </androidx.appcompat.widget.Toolbar>-->

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/selectAll_rl"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tittle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/do_chk_all"
                            android:fontFamily="@font/sf_pro_display_regular"
                            android:text="Select All"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/do_chk_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="16dp"
                            android:theme="@style/check_style" />


                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rc_deliverOrderList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="4dp"
                            android:visibility="visible" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/img_noProducts"
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            android:layout_centerInParent="true"
                            android:visibility="visible"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/error_animation" />


                        <!--
                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:id="@+id/txt_no_record"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="No records were found.."
                                                    android:visibility="gone"
                                                    android:layout_centerInParent="true"
                                                    android:textSize="15sp"
                                                    android:textStyle="bold"
                                                    android:fontFamily="@font/sf_pro_display_regular"/>
                        -->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/btn_show"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorWhite"
                            android:layout_centerHorizontal="true"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_back_do"
                                style="@style/RoundCornerButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text="Cancel"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="1"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="15sp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_next_do"
                                style="@style/RoundCornerButtonGreen"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/sf_pro_display_regular"
                                android:text="Next"
                                android:layout_marginBottom="15dp"
                                android:layout_marginStart="15dp"
                                android:layout_weight="1"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite"
                                android:textSize="15sp" />


                        </LinearLayout>



                    </RelativeLayout>

                </LinearLayout>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



        </LinearLayout>

    </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>