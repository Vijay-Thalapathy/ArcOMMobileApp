<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:background="@color/colorBg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Oms"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:text="OMS"
                android:layout_marginStart="15dp"
                android:background="@drawable/shape_btn_bg"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:visibility="gone"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textAllCaps="false"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_warehouse"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:text="Warehouse"
                android:visibility="gone"
                android:background="@drawable/shape_btn5"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_route"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:text="Route"
                android:visibility="gone"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textAllCaps="false"
                android:background="@drawable/shape_btn4"/>




        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcOmsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="visible" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/txt_no_record"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/error_animation" />

            <!--  <androidx.appcompat.widget.AppCompatTextView
                  android:id="@+id/txt_no_record"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="No records were found.."
                  android:visibility="visible"
                  android:layout_centerInParent="true"
                  android:textSize="15sp"
                  android:textStyle="bold"
                  android:fontFamily="@font/sf_pro_display_regular"/>-->


        </RelativeLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>